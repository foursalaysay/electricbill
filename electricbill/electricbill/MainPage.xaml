<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="electricbill.MainPage">

    <ScrollView>
        <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Electric Bill" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
            <StackLayout Orientation="Horizontal" Margin="0 10 0 10">
                <Label Text="Meter Number: "/>
                <Entry x:Name="meterNo"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0 10 0 10">
                <Label Text="Present Reading: "/>
                <Entry x:Name="presentR"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0 10 0 10">
                <Label Text="Previous Reading: "/>
                <Entry x:Name="previousR"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0 10 0 10">
                <Label Text="Type of Registration: "/>
                <Entry x:Name="rType"/>
            </StackLayout>
            <Button Text="Add" Clicked="Button_Clicked"/>

        </StackLayout>
    </ScrollView>

</ContentPage>
